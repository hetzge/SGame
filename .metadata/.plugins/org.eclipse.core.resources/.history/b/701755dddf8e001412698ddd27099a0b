package de.hetzge.sgame.network;

import org.nustaq.serialization.FSTConfiguration;

public class NetworkConfig {

	public static final NetworkConfig INSTANCE = new NetworkConfig();

	public IF_ServerLifecycle serverLifecycle = null;
	public IF_ClientLifecycle clientLifecycle = null;
	public PeerRole peerRole;
	public Peer peer;
	public int port = 4321;
	public FSTConfiguration fst;

	private NetworkConfig() {
		this.fst = FSTConfiguration.createDefaultConfiguration();
	}
}
