package de.hetzge.sgame.network.message;

import java.util.HashMap;
import java.util.LinkedList;
import java.util.List;
import java.util.Map;

public class MessageHandlerPool {

	private final Map<Class<?>, List<MessageHandler<?>>> messageHandlers = new HashMap<>();

	public <T> void registerMessageHandler(Class<T> messageClazz, MessageHandler<T> messageHandler) {
		List<MessageHandler<?>> list = this.messageHandlers.get(messageClazz);
		if (list == null) {
			list = new LinkedList<>();
		}
		this.messageHandlers.put(messageClazz, list);

		list.add(messageHandler);
	}

}
