package de.hetzge.sgame.libgdx;

import com.badlogic.gdx.backends.lwjgl.LwjglApplication;
import com.badlogic.gdx.backends.lwjgl.LwjglApplicationConfiguration;

import de.hetzge.sgame.common.IF_Module;

public class LibGdxModule implements IF_Module {

	private LwjglApplication lwjglApplication;

	@Override
	public void init() {
		

	}

	@Override
	public void update() {
		if (this.lwjglApplication == null) {
			LwjglApplicationConfiguration cfg = new LwjglApplicationConfiguration();
			cfg.title = "hello-world";
			cfg.useGL20 = false;
			cfg.width = 480;
			cfg.height = 320;
			new LwjglApplication(new LibGdxApplication(), cfg);
		}
	}

}
