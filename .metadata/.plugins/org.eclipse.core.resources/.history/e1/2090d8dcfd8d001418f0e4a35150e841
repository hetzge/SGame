package de.hetzge.sgame.libgdx.renderable;

import com.badlogic.gdx.graphics.g2d.Animation;

import de.hetzge.sgame.common.renderable.Renderable;
import de.hetzge.sgame.libgdx.LibGdxConfig;

public class LibGdxRenderableAnimation implements Renderable<LibGdxRenderableContext> {

	private final Animation animation;

	public LibGdxRenderableAnimation(Animation animation) {
		this.animation = animation;
	}

	@Override
	public void render(LibGdxRenderableContext context) {
		this.animation.getKeyFrame(LibGdxConfig.stateTime);
	}
}
