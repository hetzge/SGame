package de.hetzge.sgame.render;

import java.util.HashMap;
import java.util.Map;

public class RenderablePool {

	private final Map<RenderableKey, Renderable<?>> renderables = new HashMap<>();

	public RenderablePool() {
	}

	public void registerRenderable(RenderableKey renderableKey, Renderable<?> renderable) {
		this.renderables.put(renderableKey, renderable);
	}

	public void createRenderable(IF_RenderableCreator renderableCreator) {
		this.registerRenderable(renderableCreator.getRenderableKey(), renderableCreator.createRenderable());
	}

	public Renderable<?> getRenderable(RenderableKey renderableKey) {
		return this.renderables.get(renderableKey);
	}

}
