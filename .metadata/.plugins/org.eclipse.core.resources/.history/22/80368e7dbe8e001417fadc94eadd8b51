package de.hetzge.sgame.sync;

import de.hetzge.sgame.common.UUID;
import de.hetzge.sgame.sync.message.SyncMessage;

public class SyncProperty<TYPE> {

	private final String key;
	private TYPE value;
	private TYPE oldValue;

	public SyncProperty(TYPE value) {
		this.key = UUID.generateKey();
		this.value = value;
		SyncModule.syncPool.registerSyncProperty(this);
	}

	public SyncProperty() {
		this(null);
	}

	public TYPE getValue() {
		return this.value;
	}

	public void setValue(TYPE value) {
		this.value = value;

	}

	protected SyncMessage getMessage() {
		if (this.value != this.oldValue) {
			this.oldValue = this.value;
			this.toMessageInSyncPool();
		}
	}

	private void toMessageInSyncPool() {
		SyncMessage syncMessage = new SyncMessage();
		syncMessage.key = this.key;
		syncMessage.value = this.value;
		SyncModule.syncPool.registerSyncProperty(syncMessage);
	}

	public String getKey() {
		return this.key;
	}

}
