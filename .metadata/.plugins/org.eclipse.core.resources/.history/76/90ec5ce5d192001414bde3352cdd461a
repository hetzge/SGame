package de.hetzge.sgame.render;

import java.util.HashMap;
import java.util.Map;

public class RenderablePool {

	private final Map<IF_RenderableKey, IF_RenderableWrapper<?, ?>> renderables = new HashMap<>();
	private final List<IF_Renderable> renderables2 = new LinkedList<>();

	public RenderablePool() {
	}

	public void registerRenderable(IF_RenderableKey renderableKey, IF_RenderableWrapper<?, ?> renderable) {
		this.renderables.put(renderableKey, renderable);
	}

	public IF_RenderableWrapper<?, ?> getRenderable(IF_RenderableKey renderableKey) {
		return this.renderables.get(renderableKey);
	}

}
