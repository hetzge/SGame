package de.hetzge.sgame.network;

import java.util.List;

import de.hetzge.sgame.common.IF_Module;
import de.hetzge.sgame.message.MessageModule;

public class NetworkModule implements IF_Module {

	public final NetworkConfig config = new NetworkConfig();
	private final PeerRole peerRole;
	private Peer peer;

	public NetworkModule(PeerRole peerRole, MessageModule messageModule) {
		this.peerRole = peerRole;
	}

	@Override
	public void init() {
		switch (this.peerRole) {
		case CLIENT:
			this.peer = new Client();
			break;
		case SERVER:
			this.peer = new Server();
			break;
		default:
			throw new IllegalStateException();
		}
	}

	@Override
	public void update() {
		List<Object> messages = NetworkConfig.INSTANCE.messagePool.flush();
		for (Object message : messages) {
			this.peer.sendMessage(message);
		}
	}

}
