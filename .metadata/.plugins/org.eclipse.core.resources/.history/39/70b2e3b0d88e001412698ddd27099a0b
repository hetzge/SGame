package de.hetzge.sgame.sync;

import org.nustaq.serialization.FSTConfiguration;

import de.hetzge.sgame.sync.serializer.FSTSyncPropertySerializer;

public class SyncConfig {

	public static final SyncConfig INSTANCE = new SyncConfig();
	
	public FSTConfiguration fst = FSTConfiguration.createDefaultConfiguration();
	public final SyncPool syncPool = new SyncPool();

	private SyncConfig() {
		this.fst.registerSerializer(SyncProperty.class, new FSTSyncPropertySerializer(), true);
	}

}
